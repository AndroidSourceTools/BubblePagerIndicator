<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BubblePageIndicator">
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Radius of the circles. -->
        <attr name="radius" format="dimension" />
        <!-- Margin between the circles. -->
        <attr name="marginBetweenCircles" format="dimension" />
        <!-- On surface circles count -->
        <attr name="onSurfaceCount" format="integer" />
        <!-- Rising circles count -->
        <attr name="risingCount" format="integer" />
        <!-- Default style -->
        <attr name="indicatorStyle" format="reference" />
    </declare-styleable>
</resources>